{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node"
  },
  "include": ["engine/**/*.ts", "entry/**/*.ts", "queue/**/*.ts", "bronze/**/*.ts", "flags/**/*.ts", "replay/**/*.ts", "simulation/**/*.ts", "stress/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
