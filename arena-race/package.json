{
  "name": "arena-race-contracts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:sepolia": "hardhat run contracts/scripts/deploy.ts --network sepolia",
    "deploy:local": "hardhat run contracts/scripts/deploy-and-run-local.ts",
    "simulate:local": "hardhat run contracts/scripts/deploy-and-run-local.ts",
    "verify:checklist": "node scripts/verify-pre-mainnet.js",
    "node:localhost": "hardhat node",
    "deploy:localhost": "hardhat run contracts/scripts/deploy-localhost.ts --network localhost",
    "signer": "node scripts/signer-server.js",
    "game-server": "npm run dev --prefix game-server",
    "verify:localhost": "node scripts/verify-localhost-escrow.js",
    "dev:all": "concurrently -n node,deploy,signer,game,web -c blue,green,yellow,magenta,cyan \"npm run node:localhost\" \"wait-on http://127.0.0.1:8545 && npm run deploy:localhost\" \"wait-on http://127.0.0.1:8545 && npm run signer\" \"wait-on http://127.0.0.1:8545 && npm run game-server\" \"wait-on http://127.0.0.1:8545 && npm run dev --prefix webapp\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1",
    "dotenv": "^16.3.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "hardhat": "^2.19.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "ethers": "^6.9.0"
  }
}
